@model IEnumerable<Shopping.Models.Shop>

@{
    ViewBag.Title = "Index";
}

<h2>我的店铺</h2>

<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LicenseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FansNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
   
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
       <img src = "@Html.DisplayFor(modelItem => item.Image)" width="100" height="100"/>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Score)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LicenseId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FansNumber)
    </td>
    <td>
        @Html.ActionLink("编辑店铺", "Edit", new { id = item.Id }, new { @class = "list-group-item" }) 
    </td>
    <td>
        @Html.ActionLink("新品上新", "Create", "Commodities", new { area = "Area_Commodity", id = item.Id }, new { @class = "list-group-item"  })
    </td>
    <td>
        @Html.ActionLink("查看商品", "Index", "Commodities", new { area = "Area_Commodity", id = item.Id , }, new { @class = "list-group-item" })
    </td>
</tr>
}

</table>
