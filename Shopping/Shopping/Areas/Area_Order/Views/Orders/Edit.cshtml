@model Shopping.Models.Order

@{
    ViewBag.Title = "Edit";
}

@{
    var a1 = new { @class = "col-md-2 control-label" };
    var a3 = new { htmlAttributes = new { @class = "form-control" } };
    var a4 = new { @class = "text-danger" };
}

<style>
    input {
        max-width: 200px;
    }
</style>

<div id="myModal" class="modal fade">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">更新订单状态</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", a4)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label class = "control-label col-md-2">订单状态</label>
                        
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">下单时间</label>
                       
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">物流状态</label>
                       
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Logistics, ViewBag.set as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @*@Html.EditorFor(model => model.Logistics, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.ValidationMessageFor(model => model.Logistics, "", new { @class = "text-danger" })
                    </div>
                    </div>

                    @Html.HiddenFor(model => model.CustomerID)
                  
                    @Html.HiddenFor(model => model.SellerID)

                    @Html.HiddenFor(model => model.CommodityID)


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="修改" class="btn btn-default" />
                            <a class="btn btn-primary" href="@Url.Action("index")">取消</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
            }
        </div>

        <script>
            $("#myModal").modal();
        </script>

