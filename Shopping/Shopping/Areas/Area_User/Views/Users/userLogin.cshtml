
<form method="post" action="@Url.Action("userLogin","Users")" role="form">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-md-3 control-label">账号：</label>
            <div class="col-md-6">
                <input class="form-control" name="Account" type="text" placeholder="请输入账号"/>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-md-3 control-label">密码：</label>
            <div class="col-md-6">
                <input class="form-control" name="Password" type="password" placeholder="密码"/>
            </div>
        </div>
        
        
        <div class="form-group">
            <div class="col-md-3 col-md-offset-3">
                <button style="width:100%" class="btn btn-primary" type="submit">提交</button>
            </div>
        </div>
    </div>
</form>
