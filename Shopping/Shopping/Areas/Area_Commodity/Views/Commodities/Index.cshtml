@model IEnumerable<Shopping.Models.Commodity>

@{
    ViewBag.Title = "Index";
}

<h2>商品列表</h2>

    @foreach (var item in Model)
    {
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-6">
                    <img src="@Html.DisplayFor(modelItem => item.Image)" width="100" height="100" />

                    <ul class="fr">
                        <li>@Html.DisplayFor(modelItem => item.Name)</li>
                        <li>@Html.DisplayFor(modelItem => item.Type)</li>
                        <li>@Html.DisplayFor(modelItem => item.Number)</li>
                        <li>
                            @Html.DisplayFor(modelItem => item.Price)RMB ×1
                        </li>
                        <li>
                            @Html.Raw(item.Introduction) 
                        </li>
                    </ul>
                </div>

            </div>
        </div>

    }

