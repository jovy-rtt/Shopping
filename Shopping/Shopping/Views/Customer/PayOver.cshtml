<script>
    var images = ["cloth1.png", "cloth2.png", "shoes1.png", "watch1.jpg","cloth3.png", "cloth4.png", "shoes2.png"];
    var num = 0;
    var num2 = 1;
    var num3 = 2;
    var num4 = 3;
    var time = 120;
    my();
    var handle;
    function my() {
        handle = setInterval(autofun, 1000);
        handle = setInterval(yy, 2000);
    }

    function showimage() {
        $("#img1").attr("src", "/Images/UserViewCommodity/" + images[num]);
        $("#img2").attr("src", "/Images/UserViewCommodity/" + images[num2]);
        $("#img3").attr("src", "/Images/UserViewCommodity/" + images[num3]);
        $("#img4").attr("src", "/Images/UserViewCommodity/" + images[num4]);
    }

    function autofun() {
        $("#tt").text(time);
        time--;

    }

    function yy() {
        num++;
        if (num > 6) num = 0;
        num2++;
        if (num2 > 6) num2 = 0;
        num3++;
        if (num3 > 6) num3 = 0;
        num4++;
        if (num4 > 6) num4 = 0;
        showimage();
    }
</script>