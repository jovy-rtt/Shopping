@{
    Layout = "~/Views/Seller/SellerLayout.cshtml";
}
@model Shopping.Models.User
@{
    var ajaxOptions = new AjaxOptions
    {
        LoadingElementId = "loading",
        UpdateTargetId = "mainWindow",
        OnFailure = "OnFailure"
    };
}
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Peach购物管理系统", "Index", "Seller", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (@Session["username"] == null)
                        {
                            <li style="margin-left :24px"><a href="~/Area_User/Users/SellerLogin">登录</a> </li>
                            <li style="margin-left :16px"><a href="~/Area_User/Users/SellerCreate">注册</a></li>
                        }
                        else
                        {
                            <li style="margin-left :24px;color:white;margin-top:15px">欢迎，@Session["username"]</li>
                            <li style="margin-left :16px">@Html.ActionLink("退出", "LoginOut", "Users", new { area = "Area_User" }, ajaxOptions)</li>

                        }
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="row">
            <div class="col-md-3" style="margin-top:60px">
                <div class="leftMenu">
                    <h3 class="btn">账户信息</h3>
                    <div class="list-group">
                        @Ajax.ActionLink("我的账户", "SellerDetail", "Users", new { area = "Area_User", id = int.Parse(@Session["userid"].ToString()) }, ajaxOptions, new { @class = "list-group-item" })
                        @Ajax.ActionLink("我的银行卡", "SellerCreate", "Users", new { area = "Area_User" }, ajaxOptions, new { @class = "list-group-item" })
                        @Html.ActionLink("修改密码", "SellerEditPwd", "Users", new { area = "Area_User" }, new { @class = "list-group-item" })
                    </div>
                    <h3 class="btn">我的店铺</h3>
                    <div class="list-group">
                        @Html.ActionLink("新建店铺", "Create", "Shops", new { area = "Area_Shop" }, new { @class = "list-group-item" })
                        @Ajax.ActionLink("已有店铺", "Index", "Shops", new { area = "Area_Shop" }, ajaxOptions, new { @class = "list-group-item" })
                        @Ajax.ActionLink("未读评论", "", "", new { area = "" }, ajaxOptions, new { @class = "list-group-item" })
                    </div>
                    <h3 class="btn">我的订单</h3>
                    <div class="list-group">
                        @Ajax.ActionLink("未处理订单", "Index", "Orders", null, ajaxOptions, new { @class = "list-group-item" })
                        @Ajax.ActionLink("已处理订单", "Index", "Orders", null, ajaxOptions, new { @class = "list-group-item" })
                    </div>
                    <h3 class="btn">我的收益</h3>
                    <div class="list-group">
                        @Ajax.ActionLink("查看收益", "Index", "Orders", null, ajaxOptions, new { @class = "list-group-item" })
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div id="mainWindow" style="border-left:2px solid ;margin-top:10px; padding:10px; overflow-y:auto; overflow-x:hidden">
                    
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            var menu = $(".leftMenu");
            menu.accordion({ collapsible: true });
            $("#mainWindow").css({ minHeight: menu.height() });
        });
        function OnFailure(xhr) {
            $("body").html(xhr.responseText);
        }
    </script>

</body>
